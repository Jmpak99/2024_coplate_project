                android:id="@+id/rlvvbyo308cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:text="치즈라면"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/r47fem66nqg6"
